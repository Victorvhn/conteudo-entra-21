@{
    Layout = "~/Views/Shared/Master.cshtml";
}


@Html.ActionLink("Nova Recrutadora", "Cadastro", "Recrutadora", new { @class = "btn btn-primary float-right mr-2 mb-2 mt-2" })
<div class="mr-3 ml-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="bg-secondary text-white">
                <th>Código</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Ação</th>
            </tr>
        </thead>

        <tbody>
            @foreach (ExemploMVC02.Models.Recrutadora recrutadora in @ViewBag.Recrutadoras)
            {
                <tr>
                    <td>@recrutadora.Id</td>
                    <td>@recrutadora.Nome</td>
                    <td>@recrutadora.CPF</td>
                    <td>
                        <a href="/Recrutadora/Editar?id=@recrutadora.Id" class="btn btn-outline-success">
                            <i class="fa fa-edit"></i> Editar
                        </a>
                        <a href="/Recrutadora/Excluir?id=@recrutadora.Id" class="btn btn-outline-danger">
                            <i class="fa fa-trash"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>

        <tfoot>
            <tr class="bg-secondary text-white">
                <th>Código</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Ação</th>
            </tr>
        </tfoot>
    </table>
</div>